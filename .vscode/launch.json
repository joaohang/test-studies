{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Nodejs Debug Port",
            "request": "attach",
            "port": 9229,
            "type": "node",
            "skipFiles": [
                "<node_internas>/**",
                "${workspaceFolder}/**/node_modules/**/*.js"
            ],
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "restart": true
        }        
    ]
}